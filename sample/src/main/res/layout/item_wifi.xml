<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_normal"
    android:layout_marginStart="@dimen/margin_normal"
    android:layout_marginEnd="@dimen/margin_normal">

    <View
        style="@style/split_line"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal" />

    <ProgressBar
        android:id="@+id/pb_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_toStartOf="@+id/wifi_lock"
        android:indeterminateTint="@color/night_color_01"
        android:visibility="invisible"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_toLeftOf="@+id/wifi_lock" />

    <ImageView
        android:id="@+id/wifi_lock"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/img_wifi"
        app:srcCompat="@drawable/night_icon_general_lock_48px"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_toLeftOf="@+id/img_wifi" />

    <ImageView
        android:id="@+id/img_wifi"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/info"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_toLeftOf="@+id/info" />


    <ImageView
        android:id="@+id/info"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/night_icon_general_info_48px"
        android:layout_alignParentRight="true" />

</RelativeLayout>
