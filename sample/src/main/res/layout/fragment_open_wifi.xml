<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context="com.longquan.ui.fragment.OpenWifiFragment">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/wifi_img"
        android:src="@drawable/ic_wifi_blank"
        android:background="@color/color_33FFFFFF"
        android:layout_above="@id/open_wifi_button"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/open_wifi_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_wifi_scan"
        android:layout_centerInParent="true"
        />


</RelativeLayout>